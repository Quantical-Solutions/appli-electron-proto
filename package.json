{
  "build": {
    "publish": [
      {
        "provider": "github",
        "owner": "Octeus",
        "repo": "Nomad App"
      }
    ],
    "appId": "com.octeus.nomad-card",
    "productName": "OCTEUS Nomad Solutions 32",
    "mac": {
      "category": "public.app-category.developper-tools",
      "icon": "res/assets/media/img/logo.png"
    },
    "linux": {
      "target": [
        "deb",
        "snap",
        "rpm"
      ],
      "category": "Utility",
      "icon": "res/assets/media/img/logo.png"
    },
    "win": {
      "publish": [
        "github"
      ],
      "target": {
        "target": "nsis",
        "arch": [
          "ia32",
          "x64"
        ]
      },
      "icon": "res/assets/media/img/logo.png"
    },
    "nsis": {
      "perMachine": true,
      "allowToChangeInstallationDirectory": true,
      "oneClick": false
    }
  },
  "name": "octeus-card",
  "description": "OCTEUS Nomad Solutions - Card",
  "version": "1.0.0",
  "main": "main.js",
  "keywords": [
    "Octeus",
    "Nomad",
    "Solutions",
    "Nomad Solutions"
  ],
  "author": {
    "name": "OCTEUS",
    "email": "infos@octeus.fr"
  },
  "scripts": {
    "publish": "electron-builder --win -p always",
    "preinstall": "npx npm-force-resolutions",
    "test": "npm start",
    "start": "electron .",
    "postinstall": "electron-builder install-app-deps",
    "distP": "electron-builder --win portable --x64",
    "distP:32": "electron-builder --win portable --ia32",
    "dist": "electron-builder --win",
    "dist:linux": "electron-builder --linux",
    "dist:mac": "electron-builder --mac",
    "pack": "electron-builder --dir"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Quantical-Solutions/appli-electron-proto.git"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Quantical-Solutions/appli-electron-proto/issues"
  },
  "homepage": "https://github.com/Quantical-Solutions/appli-electron-proto#readme",
  "devDependencies": {
    "electron": "latest",
    "electron-builder": "*",
    "electron-installer-windows": "*",
    "electron-packager": "*",
    "electron-prebuilt": "*",
    "electron-winstaller": "^4.0.0",
    "gulp": "^4.0.2"
  },
  "resolutions": {
    "minimist": "^1.2.5"
  },
  "dependencies": {
    "electron-fetch": "^1.4.0",
    "electron-reload": "^1.5.0",
    "jquery": "^3.4.1",
    "scandir": "^0.1.2",
    "shell": "^0.5.0",
    "xmlhttprequest": "^1.8.0"
  }
}
